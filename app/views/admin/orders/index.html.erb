<div class="container">

<table class="table">
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>

<% @orders.each do |order| %>

	<tr>
		<td>
			<%= link_to admin_order_path(order.id) do %>
			<%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
			<% end %>
		</td>
		<td>
			<%= order.end_user.last_name %><%= order.end_user.first_name %>
		</td>
		    <% @sum = 0 %>
		<td>
			<% order.order_details.each do |order_detail| %>

			  <% @sum += order_detail.amount %>
			<% end %>
			<%= @sum %>
		</td>
		<td><%= order.order_status_i18n %>
		</td>
	</tr>

<% end %>

</table>





</div>