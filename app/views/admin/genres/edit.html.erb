<div class="container">
<div class="row">

<h3>ジャンル編集</h3>

<%=form_for(@genre, url:"/admin/genres/#{@genre.id}") do |f| %>

<label>ジャンル</label>
<%=f.text_field :name %>

<label><%=f.radio_button :is_valid, true %>有効</label>
<label><%=f.radio_button :is_valid, false %>無効</label>

<%=f.submit('変更を保存する',class:"btn btn-primary") %>

<% end %>

</div>
</div>