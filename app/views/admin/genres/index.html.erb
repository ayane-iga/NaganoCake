<div class="container">
<div class="row">

<h3>ジャンル一覧・追加</h3>

<%=form_for(@genre, url:'/admin/genres') do |f| %>

<label>ジャンル</label>
<%=f.text_field :name %>

<label><%=f.radio_button :is_valid, "有効" %>有効</label>
<label><%=f.radio_button :is_valid, "無効" %>無効</label>

<%=f.submit('追加', class:"btn btn-primary") %>

<% end %>

<table class="table">
	<tr>
		<th>ジャンル</th>
		<th>状態</th>
		<th></th>
	</tr>

	<% @genres.each do |genre| %>
	<tr>
		<td><%=genre.name%></td>
		<td><% if genre.is_valid %>
			<p>有効</p>
			<% else %>
			<p>無効</p>
			<% end %>
		</td>
		<td>
			<%=link_to "編集", edit_admin_genre_path(genre.id) %>
		</td>
	</tr>
	<% end %>

</table>

</div>
</div>