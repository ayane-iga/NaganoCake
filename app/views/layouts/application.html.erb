<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="navbar">
    <div class="container">

<nav>

    <% if end_user_signed_in? %>

    <nav class="nav navbar-nav navbar-left">
    <li><%= link_to 'ロゴ', root_path %></li>
    </nav>

    <ul class="nav navbar-nav navbar-right">

    <li><%=link_to 'マイページ',end_users_mypage_path %></li>
    <li><%=link_to "商品一覧" %></li>
    <li><%=link_to "カート" %></li>
    <li><%= link_to 'ログアウト',destroy_end_user_session_path, method: :delete %></li>

    </ul>

   <% elsif admin_signed_in? %>

    <nav class="nav navbar-nav navbar-left">
    <li><%= link_to 'ロゴ', new_admin_session_path %></li>
    </nav>

    <ul class="nav navbar-nav navbar-right">

    <li><%=link_to "商品一覧" %></li>
    <li><%=link_to "会員一覧" %></li>
    <li><%=link_to "注文履歴一覧" %></li>
    <li><%=link_to "ジャンル一覧" %></li>
    <li><%=link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>

    </ul>

    <% else %>

    <nav class="nav navbar-nav navbar-left">
    <li><%= link_to 'ロゴ', root_path %></li>
    </nav>

    <ul class="nav navbar-nav navbar-right">

    <li><%=link_to "商品一覧" %></li>
    <li><%= link_to '新規登録', new_end_user_registration_path %></li>
    <li><%= link_to 'ログイン', new_end_user_session_path %></li>

    <% end %>
</ul>
</nav>
</div>
</header>
    <%= yield %>
  </body>
</html>
