<div class="container">

<h3>商品詳細</h3>

<%= attachment_image_tag @item, :item_image ,fallback: "142_refileDownloadImage.png",:size=>'150x150'%>
<%= @item.name %>
<%= @item.text %>

¥<%= (@item.tax_free_price * 1.1) .round %>(税込)

<%=form_for(@cart_item, url:'/cart_items') do |f| %>

<%=f.hidden_field :end_user_id, value: current_end_user.id %>
<%=f.hidden_field :item_id, value: @item.id %>

<%=f.number_field :amount,min: 0 %>

<%=f.submit "カートに入れる" %>

<% end %>

</div>
