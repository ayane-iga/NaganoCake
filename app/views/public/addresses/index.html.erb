<div class="container">
	<h3>配送先登録・一覧</h3>

	<%= form_for(@address) do |f| %>

	<%= f.text_field :post_code %>
	<%= f.text_field :address %>
	<%= f.text_field :destination %>

	<%= f.submit "登録する" %>

	<% end %>

	<table class="table">
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛先</th>
			<th></th>
		</tr>

		<% @addresses.each do |address| %>
		<tr>
			<td>
				<%= address.post_code %>
			</td>
			<td>
				<%= address.address %>
			</td>
			<td>
				<%= address.destination %>
			</td>
			<td>
				<%= link_to "編集する" %>
				<%= link_to "削除する" %>
			</td>
		</tr>
		<% end %>

	</table>


</div>